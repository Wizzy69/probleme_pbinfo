    "version": "0.2.0",
    "configurations": [
        //c++
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Launch C++ Debug",
            "program": "${workspaceFolder}/main.cpp",
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "stopAtEntry": false,
            "miDebuggerPath": "D:\\MinGW\\bin\\g++.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        },
    ]
}